{
  "name": "dispatch_controller",
  "version": "1.0.0",
  "description": "Med Aid Drone Dispatch Controller",
  "main": "index.js",
  "author": "lazaroofarrill <lazaroofarrill@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node --es-module-specifier-resolution=node build/src/app.js",
    "start:dev": "nodemon src/app.ts",
    "job:drone-battery-check": "node --es-module-specifier-resolution=node build/src/jobs/battery-level-check/start.js",
    "job:drone-battery-check:dev": "nodemon src/jobs/battery-level-check/start.ts",
    "build": "tsc",
    "lint": "eslint src --fix",
    "clean": "rimraf build",
    "format": "prettier src tests -w",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest) --runInBand",
    "test:cov": "yarn test --coverage --collectCoverageFrom=src/**",
    "typeorm": "typeorm-ts-node-esm -d src/common/adapters/storage/typeorm/data-source.ts",
    "typeorm:test": "typeorm-ts-node-esm -d src/common/adapters/storage/typeorm/test-data-source.ts",
    "set:env": "cp .env.example .env",
    "config:hooks": "git config core.hooksPath hooks"
  },
  "dependencies": {
    "@faker-js/faker": "^8.0.2",
    "@types/uuid": "^9.0.1",
    "axios": "^1.4.0",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.1.1",
    "express": "^4.18.2",
    "formidable": "v3",
    "jest-extended": "^3.2.4",
    "joi": "^17.9.2",
    "minio": "^7.1.1",
    "node-cron": "^3.0.2",
    "pg": "^8.11.0",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.16",
    "typeorm-naming-strategies": "^4.1.0",
    "typescript": "^5.0.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node-cron": "^3.0.7",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1"
  },
  "type": "module",
  "engines": {
    "npm": "please-use-yarn",
    "yarn": ">= 1.20",
    "node": ">=18"
  }
}
